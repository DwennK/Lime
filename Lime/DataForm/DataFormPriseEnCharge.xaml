<telerik:RadWindow x:Class="Lime.DataForm.DataFormPriseEnCharge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Header="Prise en charge" Height="805" Width="900" telerik:StyleManager.Theme="Crystal" WindowStartupLocation="CenterScreen">
    <Grid>
        <telerik:GroupBox Height="74" VerticalAlignment="Top" Header="1) Êtes-vous déjà client chez nous ?" Margin="0,10,0,0">
            <Grid>
                <telerik:RadButton Content="Rechercher le client" HorizontalAlignment="Left" Height="Auto" Margin="181,10,0,0" VerticalAlignment="Top" Width="160" telerik:StyleManager.Theme="Crystal" />
                <telerik:RadButton Content="Créer un nouveau client" HorizontalAlignment="Left" Height="Auto" Margin="542,10,0,0" VerticalAlignment="Top" Width="160" telerik:StyleManager.Theme="Crystal" />

            </Grid>
        </telerik:GroupBox>
        <Label Content="2) Dans quel magasin souhaitez-vous récupérer le téléphone ?" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top"/>
        <telerik:RadListBox HorizontalAlignment="Left" Margin="424,87,0,0" VerticalAlignment="Top" Width="250" telerik:StyleManager.Theme="Crystal">
            <telerik:RadListBoxItem Content="Neuchâtel" />
            <telerik:RadListBoxItem Content="Cortaillod"/>
        </telerik:RadListBox>
        <Label Content="3) Lieu actuel du téléphone ?" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top"/>
        <telerik:RadListBox HorizontalAlignment="Left" Margin="424,165,0,0" VerticalAlignment="Top" Width="250" telerik:StyleManager.Theme="Crystal">
            <telerik:RadListBoxItem Content="Succursale Neuchâtel" />
            <telerik:RadListBoxItem Content="Succursale Cortaillod"/>
            <telerik:RadListBoxItem Content="Chez le client"/>
            <telerik:RadListBoxItem Content="Rendu au client"/>
        </telerik:RadListBox>
        <Label Content="4) Code de l'appareil et code SIM" HorizontalAlignment="Left" Margin="10,292,0,0" VerticalAlignment="Top"/>
        <telerik:RadWatermarkTextBox HorizontalAlignment="Left" Height="23" Margin="424,295,0,0" TextWrapping="Wrap" Text="" WatermarkContent="Code appareil" VerticalAlignment="Top" Width="152" telerik:StyleManager.Theme="Crystal"/>
        <telerik:RadWatermarkTextBox HorizontalAlignment="Left" Height="23" Margin="604,295,0,0" TextWrapping="Wrap" Text="" WatermarkContent="Code SIM" VerticalAlignment="Top" Width="152" telerik:StyleManager.Theme="Crystal"/>
        <telerik:GroupBox Height="75" Margin="0,363,0,0" VerticalAlignment="Top" Header="5) Date de réception et date de fin">
            <Grid>

                <telerik:RadDatePicker HorizontalAlignment="Left" Margin="211,10,0,0" VerticalAlignment="Top" telerik:StyleManager.Theme="Crystal"/>
                <telerik:RadDatePicker HorizontalAlignment="Left" Margin="709,10,0,0" VerticalAlignment="Top" telerik:StyleManager.Theme="Crystal"/>
                <Label Content="Date de dépôt de l'appareil: " HorizontalAlignment="Center" Margin="10,10,690,0" VerticalAlignment="Top" Width="176"/>
                <Label Content="Date de réception voulue de l'appareil: " HorizontalAlignment="Center" Margin="440,10,190,0" VerticalAlignment="Top" Width="246"/>

            </Grid>
        </telerik:GroupBox>
        <telerik:GroupBox Height="76" Margin="0,443,0,0" VerticalAlignment="Top" Header="6) IMEI / Numéro de série">
            <Grid>
                <Label Content="IMEI (composer le *#06# sur le téléphone): " Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
                <telerik:RadWatermarkTextBox HorizontalAlignment="Left" Height="25" Margin="276,10,0,0" TextWrapping="Wrap" WatermarkContent="IMEI" VerticalAlignment="Top" Width="152" telerik:StyleManager.Theme="Crystal"/>
                <Label Content="Numéro de série (iPad / Ordinateur):" Margin="447,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <telerik:RadWatermarkTextBox HorizontalAlignment="Left" Height="25" Margin="681,10,0,0" TextWrapping="Wrap" WatermarkContent="Numéro de série" VerticalAlignment="Top" Width="152" telerik:StyleManager.Theme="Crystal"/>
            </Grid>

        </telerik:GroupBox>
        <telerik:GroupBox Height="57" Margin="0,524,0,0" VerticalAlignment="Top" Header="7) Facture ?">
            <Grid>
                <telerik:RadTreeView x:Name="radTreeView" IsOptionElementsEnabled="True"  HorizontalAlignment="Center" VerticalAlignment="Top"  telerik:StyleManager.Theme="Crystal">
                    <telerik:RadTreeViewItem Header="Est-ce que c'est une entreprise et que le paiement se fait sur facture ?"/>
                </telerik:RadTreeView>
            </Grid>
        </telerik:GroupBox>
        <telerik:GroupBox Height="57" Margin="0,586,0,0" VerticalAlignment="Top" Header="8) Clôturé ?">
            <Grid>
                <telerik:RadTreeView x:Name="radTreeView1" IsOptionElementsEnabled="True"  HorizontalAlignment="Center" VerticalAlignment="Top"  telerik:StyleManager.Theme="Crystal">
                    <telerik:RadTreeViewItem Header="Document clôturé ?"/>
                </telerik:RadTreeView>
            </Grid>
        </telerik:GroupBox>
        <telerik:RadButton Content="Valider" HorizontalAlignment="Center" Height="40" Margin="393,655,390,0" Width="105" telerik:StyleManager.Theme="Crystal" VerticalAlignment="Top"/>
    </Grid>
</telerik:RadWindow>