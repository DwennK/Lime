<Window x:Class="Lime.SplashScreen.SplashScreenLoading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lime.SplashScreen"
        mc:Ignorable="d"
        Title="SplashScreenLoading"
        Background="Transparent"
        Width="400"
        Height="400"
        AllowsTransparency="True"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        WindowStyle="None"
                >

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image x:Name="back" Grid.RowSpan="3" Source="/Lime;component/Images/lemon.png"/>
        <TextBlock x:Name="label" Foreground="White" Grid.Row="1" Margin="4" />
        <ProgressBar x:Name="progress" BorderBrush="Transparent" BorderThickness="3" Grid.Row="2" IsIndeterminate="True" Maximum="100" />
    </Grid>
</Window>
